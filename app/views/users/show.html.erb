<h1><%= @user.username %></h1>

<div class="user-main">
  <div class="tip">
    <h2>Practice Tip</h2>
    <h3><%= @tip.title %></h3>
    <p><%= @tip.content %></p>
  </div>

  <div class="stats-widget">
    <div class="most-popular-instrument">
      <h3>Most Popular Instrument:</h3>
      <% if @top_instrument != nil %>
        <%= @top_instrument.name %>
      <% else %>
        <p>An instrument has not been created yet.</p>
      <% end %>
    </div>

    <div class="number-of-routines">
      <h3>Number of Routines:</h3>
      <%= @routine_count %>
    </div>

    <div class="number-of-instruments">
      <h3>Number of Instruments:</h3>
      <%= @instrument_count %>
    </div>
  </div>
</div>
