<h1><%= @routine.name %>: <%= @item.name %></h1>

<div class="">
  <%= button_to "delete item", routine_item_path(@routine, @item), method: :delete %>
  <%= button_to "edit item", edit_routine_item_path(@routine, @item) %>
  <%= button_to "next item", routine_item_path(@routine, @next), method: :get %>
</div>

<div class="">
  <p><%= @item.name %></p>
  <p><%= @item.description %></p>
  <p><%= @item.goal %></p>
</div>

<div class="">
  <h3>Notes</h3>

  <% @item.notes.each do |note| %>
    <li><%= link_to note.created_at, routine_item_note_path(@routine, @item, note) %> - <%= note.content %></li>
  <% end %>
</div>
