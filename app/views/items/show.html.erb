<h1><%= @routine.name %>: <%= @item.name %></h1>

<ul>
  <li><%= link_to "delete item", routine_item_path(@routine, @item), method: :delete %></li>
  <li><%= link_to "add item", new_routine_item_path(@routine, @item) %></li>
  <li><%= link_to "edit item", edit_routine_item_path(@routine, @item) %></li>
</ul>

<p><%= @item.name %></p>
<p><%= @item.description %></p>
<p><%= @item.goal %></p>

<h3>Notes</h3>

<% @item.notes.each do |note| %>
  <li><%= note.created_at %> - <%= note.content %></li>
<% end %>
