<h1>Edit Item: <%= @item.name %></h1>

<%= form_for(@item, url: routine_item_path(@routine, @item)) do |f| %>
  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="">
    <%= f.label :description %>
    <%= f.text_area :description, size: "30x10"  %>
  </div>
  <br>
  <div class="">
    <%= f.label :goal %>
    <%= f.text_area :goal, size: "30x5"  %>
  </div>
  <br>
  <%= f.hidden_field :routine_id %>
  <%= f.submit "edit item" %>
<% end %>
