<h1><%= @routine.name %></h1>

<ul>
  <li><%= link_to "delete routine", routine_path(@routine), method: :delete %></li>
  <li><%= link_to "edit routine", edit_routine_path(@routine) %></li>
  <li><%= link_to "view items", routine_items_path(@routine) %></li>
  <li><%= link_to "add item", new_routine_item_path(@routine, @item) %></li>
</ul>


<% @routine.items.each do |item| %>
  <li><%= link_to item.name, routine_item_path(@routine, item) %></li>
<% end %>
