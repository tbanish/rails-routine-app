<h1>Create a Routine</h1>

<% if @routine.errors.any? %>
  <div class="errors">
    <h2>
      <%= pluralize(@routine.errors.count, "error") %>
      prohibited this routine from being saved:
    </h2>
    <ul>
    <% @routine.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@routine) do |f| %>
  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="">
    <h2>Select an instrument:</h2>
    <%= f.collection_select(:instrument_id, Instrument.all, :id, :name, prompt: true) %>
  </div>
  <br>
  <div class="">
    <h2>If you can't find your instrument, create a new one below:</h2>
    <%= f.fields_for(:instrument) do |i| %>
      <%= i.label :name %>
      <%= i.text_field :name %>
    <% end %>
  </div>
  <br>
  <%= f.submit %>
<% end %>
